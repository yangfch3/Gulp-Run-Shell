{
  "name": "gulp-run-shell",
  "version": "0.0.1",
  "description": "基于 QMUI Web Desktop，使其单纯地支持 Gulp",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "build:mac": "electron-packager ./ 'Gulp Run Shell' --platform=darwin --arch=x64 --icon=./images/logo.icns --overwrite --out ./dist/$npm_package_version --ignore='(node_modules/electron-*|node_modules/.bin|.git|.DS_Store|dist)'",
    "build:win": "electron-packager ./ 'Gulp Run Shell' --platform=win32 --arch=x64 --icon=./images/logo.ico --overwrite --out ./dist/$npm_package_version --ignore='(node_modules/electron-*|.git|.DS_Store|dist)'"
  },
  "devDependencies": {
    "asar": "^0.12.3",
    "electron-packager": "^7.7.0",
    "electron": "1.4.15"
  },
  "dependencies": {
    "lodash": "^4.16.4",
    "fs-extra": "^0.30.0"
  },
  "author": "*QMUI Team, yangfch3",
  "license": "MIT"
}
